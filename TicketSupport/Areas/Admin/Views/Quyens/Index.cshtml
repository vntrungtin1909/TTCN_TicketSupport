<!-- Site wrapper -->
<div class="wrapper">
    <!-- Content Wrapper -->
    <div class="content-wrapper">
        <!-- Main content -->
        <section class="content">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-danger">DANH SÁCH QUYỀN</strong>
                        </div>
                        <div class="col-md-6 text-right">
                            <a href="@Url.Action("Create", "Quyens", new { area = "Admin" })" class="btn-sm btn-success">
                                <i class="fa fa-plus"></i> Thêm
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div id="message-container">
                        @Html.Partial("Message")
                    </div>
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Tên quyền</th>
                                <th>Tên chức năng</th>                              
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ten_quyen)
                                    </td>
                                    <th>
                                        @Html.DisplayFor(modelItem => item.tblchucnang.ten_chuc_nang)
                                    </th>
                                    <td>                                        
                                        <a href="@Url.Action("Edit", "Quyens", new { id = item.ma_quyen, area = "Admin" })" class="btn-sm btn-primary">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", "Quyens", new { id = item.ma_quyen, area = "Admin" })" class="btn-sm btn-danger">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
    </div>
</div>