@model TicketSupport.Models.tblyeucauhotrokythuat

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section footer{
    <script>
        // giới hạn thời gian hiển thị thong báo
        let table = new DataTable('#myTable')
        setTimeout(function () {
            let messageElement = document.getElementById('message-container');
            if (messageElement) {
                messageElement.style.display = 'none';
            }
        }, 2000);
        </script>
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ngay_tiep_nhan)
    @Html.HiddenFor(model => model.ngay_xu_ly)


    <div class="wrapper">
        <!-- Main Sidebar Container -->
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Main content -->
            <section class="content">

                <!-- Default box -->
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <strong class="text-danger">CHỈNH SỬA YÊU CẦU HỖ TRỢ KĨ THUẬT</strong>
                            </div>
                            <div class="col-md-6 text-right">
                                <a href="@Url.Action("Index","YeuCauKTs")" class="btn-sm btn-info"><i class="fa fa-long-arrow-alt-left"> Quay lại</i></a>
                            </div>
                        </div>
                    </div>

                    <div class="card-body">
                        <div id="message-container">
                            @Html.Partial("Message")
                        </div>
                        <div class="row">
                            @*Phần nhập dữ liệu bằng tay*@
                            <div class="col-md-6">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="form-group">
                                    @Html.LabelFor(model => model.ma_yeu_cau, "Mã yêu cầu", htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-10">
                                        <div class="form-control"> @Html.DisplayFor(model => model.ma_yeu_cau) </div>
                                        @Html.HiddenFor(model => model.ma_yeu_cau)
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ten_yeu_cau, "Tên yêu cầu", htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.ten_yeu_cau, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.ma_khach_hang, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ma_khach_hang, "Mã khách hàng", htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.ma_khach_hang, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.ma_khach_hang, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ma_phong_ban, "Tên phòng ban", htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-10">
                                        @Html.DropDownList("ma_phong_ban", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.ma_phong_ban, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.trang_thai_xu_ly, "Trạng thái", htmlAttributes: new { @class = "control-label col-md-12" })
                                    <div class="col-md-10">
                                        @Html.DropDownListFor(model => model.trang_thai_xu_ly, new[] {
                                       new SelectListItem { Text = "Chưa xử lí", Value = "0" }, new SelectListItem { Text = "Đang xử lí", Value = "1" } , new SelectListItem { Text = "Đã hoàn thành", Value = "2" } }, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.trang_thai_xu_ly, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.noi_dung_yeu_cau, "Nội dung yêu cầu", htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-10">
                                        @Html.TextAreaFor(model => model.noi_dung_yeu_cau, new { @class = "form-control", rows = 5 })
                                    </div>
                                </div>

                            </div>




                        </div>

                        @*Sua nut Create*@
                        <button class="btn-sm btn-success" type="submit" name="create"> Save <i class="fa fa-save"></i></button>

                    </div> <!-- /.card-footer-->
                </div><!-- /.card -->
            </section><!-- /.content -->
        </div> <!-- /.content-wrapper -->
    </div><!-- ./wrapper -->
}
