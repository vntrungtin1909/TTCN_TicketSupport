@model IEnumerable<TicketSupport.Models.tblkhachhang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var userRoles = Session["UserRoles"] as List<string>;
}

@section header {
    <link rel="stylesheet" href="~/Public/css/jquery.dataTables.css" />
}
@section footer{
    <script src="~/Public/js/jquery.dataTables.js"></script>
    <script>
        let table = new DataTable('#myTable')
        setTimeout(function () {
            let messageElement = document.getElementById('message-container');
            if (messageElement) {
                messageElement.style.display = 'none';
            }
        }, 2000);
    </script>
}
<!-- Site wrapper -->
<div class="wrapper">
    <!-- Main Sidebar Container -->
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-danger">DANH SÁCH KHÁCH HÀNG</strong>
                        </div>
                        @if (userRoles != null && userRoles.Contains("KH-C"))
                        {
                        <div class="col-md-6 text-right">
                            <a href="@Url.Action("Create", "KhachHangs") " class="btn-sm btn-success"><i class="fa fa-plus"></i> Thêm</a>
                            @*<a href="@Url.Action("Trash", "tblnguoidungs") " class="btn-sm btn-danger"><i class="fa fa-trash"></i> Thùng rác</a>*@
                            @*<div>@Html.ActionLink("Create New", "Create") </div>*@
                        </div>
                        }
                    </div>
                </div>
                <div class="card-body">
                    <div id="message-container">
                        @Html.Partial("Message")
                    </div>
                    <table class="table table-striped table-bordered" , id="myTable">

                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>
                                    Họ Tên
                                </th>
                                <th>
                                    Tên công ty
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Số điện thoại
                                </th>
                                <th>
                                    Mã số thuế
                                </th>
                                <th>Chức năng</th>

                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ma_khach_hang)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ho_ten_khach_hang)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ten_cong_ty)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.so_dien_thoai)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ma_so_thue)
                                    </td>
                                    <td>
                                        @if (userRoles != null && (userRoles.Contains("KH-C") || userRoles.Contains("KH-E") || userRoles.Contains("KH-D")))
                                        {
                                            if (item.trang_thai == true)
                                            {
                                                <a href="@Url.Action("Status", "KhachHangs", new { id = item.ma_khach_hang }) " class="btn-sm btn-success"><i class="fa fa-toggle-on"></i></a>
                                            }
                                            else
                                            {
                                                <a href="@Url.Action("Status", "KhachHangs", new { id = item.ma_khach_hang }) " class="btn-sm btn-danger"><i class="fa fa-toggle-off"></i></a>
                                            }
                                        }
                                        @if (userRoles != null && userRoles.Contains("KH-E"))
                                        {
                                            <a href="@Url.Action("Edit", "KhachHangs", new { id = item.ma_khach_hang }) " class="btn-sm btn-primary"><i class="fa fa-edit"></i></a>
                                        }

                                        @*<a href="@Url.Action("Details", "tblnguoidungs", new { id = item.ma_nguoi_dung }) " class="btn-sm btn-info"><i class="fa fa-eye"></i></a>*@
                                        @*<a href="@Url.Action("MoveTrash", "tblnguoidungs", new { id = item.ma_nguoi_dung }) " class="btn-sm btn-danger"><i class="fa fa-trash"></i></a>*@
                                        @if (userRoles != null && userRoles.Contains("KH-D"))
                                        {<a href="@Url.Action("Delete", "KhachHangs", new { id = item.ma_khach_hang }) " class="btn-sm btn-danger"><i class="fa fa-trash"></i></a>}
                                     
                                        </td>

                                </tr>
                            }
                        </tbody>

                    </table>

                </div> <!-- /.card-footer-->
            </div><!-- /.card -->
        </section><!-- /.content -->
    </div> <!-- /.content-wrapper -->
</div><!-- ./wrapper -->
