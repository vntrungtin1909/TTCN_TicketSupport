@model TicketSupport.ViewModels.Register

@{
    ViewBag.Title = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Register</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="icon" type="image/png" href="~/Content/images/Icons/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="~/Content/Vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/Fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/Vendor/animate/animate.css">
    <link rel="stylesheet" type="text/css" href="~/Content/Vendor/css-hamburgers/hamburgers.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/Vendor/select2/select2.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/Login_v1.css">

    <style>
        .container-login100 {
            background: url('@Url.Content("~/Content/images/hero-bg.jpg")');
            background-size: cover;
            background-position: center;
            width: 100%;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .wrap-login100 {
            background: rgba(255, 255, 255, 0.8);
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.25);
            max-width: 800px;
            width: 100%;
            position: relative;
        }

        .close-button {
            position: absolute;
            top: 10px;
            right: 10px;
            font-size: 24px;
            font-weight: bold;
            color: #333;
            text-decoration: none;
            background: rgba(255, 255, 255, 0.8);
            border-radius: 50%;
            width: 35px;
            height: 35px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.25);
            z-index: 10;
        }

        .close-button a {
            text-decoration: none;
            color: #333;
        }

        .close-button:hover {
            background: #f8d7da;
            color: #721c24;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="close-button">
                    <a href="@Url.Action("Index", "Home")">&times;</a>
                </div>

                @using (Html.BeginForm("Register", "UserLogin", FormMethod.Post, new { @style = "margin-left: 50px" }))

                {
                    @Html.AntiForgeryToken()

                    <span class="login100-form-title">Register</span>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="wrap-input100 validate-input" data-validate="Full name is required">
                                @Html.TextBoxFor(model => model.HoTenKhachHang, new { @class = "input100", placeholder = "Full Name" })
                                <span class="focus-input100"></span>
                                <span class="symbol-input100">
                                    <i class="fa fa-user" aria-hidden="true"></i>
                                </span>
                                @Html.ValidationMessageFor(model => model.HoTenKhachHang, "", new { @class = "text-danger" })
                            </div>

                            <div class="wrap-input100 validate-input" data-validate="Valid email is required">
                                @Html.TextBoxFor(model => model.Email, new { @class = "input100", placeholder = "Email" })
                                <span class="focus-input100"></span>
                                <span class="symbol-input100">
                                    <i class="fa fa-envelope" aria-hidden="true"></i>
                                </span>
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>

                            <div class="wrap-input100 validate-input" data-validate="Phone number is required">
                                @Html.TextBoxFor(model => model.SoDienThoai, new { @class = "input100", placeholder = "Phone Number" })
                                <span class="focus-input100"></span>
                                <span class="symbol-input100">
                                    <i class="fa fa-phone" aria-hidden="true"></i>
                                </span>
                                @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
                            </div>

                            <div class="wrap-input100 validate-input" data-validate="Company name is required">
                                @Html.TextBoxFor(model => model.TenCongTy, new { @class = "input100", placeholder = "Company Name" })
                                <span class="focus-input100"></span>
                                <span class="symbol-input100">
                                    <i class="fa fa-building" aria-hidden="true"></i>
                                </span>
                                @Html.ValidationMessageFor(model => model.TenCongTy, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="wrap-input100 validate-input" data-validate="Tax code is required">
                                @Html.TextBoxFor(model => model.MaSoThue, new { @class = "input100", placeholder = "Tax Code" })
                                <span class="focus-input100"></span>
                                <span class="symbol-input100">
                                    <i class="fa fa-id-card" aria-hidden="true"></i>
                                </span>
                                @Html.ValidationMessageFor(model => model.MaSoThue, "", new { @class = "text-danger" })
                            </div>

                            <div class="wrap-input100 validate-input" data-validate="Software name is required">
                                @Html.TextBoxFor(model => model.PhanMem, new { @class = "input100", placeholder = "Software" })
                                <span class="focus-input100"></span>
                                <span class="symbol-input100">
                                    <i class="fa fa-desktop" aria-hidden="true"></i>
                                </span>
                                @Html.ValidationMessageFor(model => model.PhanMem, "", new { @class = "text-danger" })
                            </div>

                            <div class="wrap-input100 validate-input" data-validate="Password is required">
                                @Html.PasswordFor(model => model.MatKhau, new { @class = "input100", placeholder = "Password" })
                                <span class="focus-input100"></span>
                                <span class="symbol-input100">
                                    <i class="fa fa-lock" aria-hidden="true"></i>
                                </span>
                                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                            </div>

                            <div class="wrap-input100 validate-input" data-validate="Password confirmation is required">
                                @Html.PasswordFor(model => model.XacNhanMatKhau, new { @class = "input100", placeholder = "Confirm Password" })
                                <span class="focus-input100"></span>
                                <span class="symbol-input100">
                                    <i class="fa fa-lock" aria-hidden="true"></i>
                                </span>
                                @Html.ValidationMessageFor(model => model.XacNhanMatKhau, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="container-login100-form-btn">
                        <button type="submit" class="login100-form-btn">Register</button>
                    </div>
                    <div class="text-center p-t-12" style="margin-left:15px">
                        <a class="txt2" href="@Url.Action("Index", "UserLogin")">
                            Back to Login
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="~/Content/vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/Content/Vendor/bootstrap/js/popper.js"></script>
    <script src="~/Content/Vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/Vendor/select2/select2.min.js"></script>
    <script src="~/Content/Vendor/tilt/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        });
    </script>
</body>
</html>
